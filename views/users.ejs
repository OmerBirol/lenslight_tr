<%- include("partials/_header") %>
<!-- body -->
<body class="main-layout inner_page">
  <!-- loader  -->
  <div class="loader_bg">
    <div class="loader"><img src="/images/loading.gif" alt="#"/></div>
  </div>
  <!-- end loader -->

  <!-- header -->
  <%- include("partials/_menu", { link: "users" }) %>
  <!-- end header inner -->

  <!-- team -->
  <div class="team">
    <div class="container_with">
      <div class="row">
        <div class="col-md-12">
          <div class="titlepage text_align_center">
            <span>05</span>
            <h2>Users</h2>
          </div>
        </div>

        <% const list = Array.isArray(users) ? users : []; %>

        <% if (list.length === 0) { %>
          <div class="col-md-12">
            <p style="text-align:center; margin-top:20px;">Kullanıcı bulunamadı.</p>
          </div>
        <% } %>

        <% for (const u of list) { %>
          <div class="col-md-4">
            <div class="team_box text_align_center">
              <div class="team_img">
                <figure>
                  <img
                    src="<%= u.avatar ? u.avatar : '/images/team1.jpg' %>"
                    alt="#"
                    style="width:100%; height:100%; object-fit:cover;"
                  />
                </figure>
              </div>

              <div class="craig">
                <h3><%= u.username %></h3>
                <span>PHOTOGRAPHER</span>

                <ul class="social_icon">
                  <li><a href="Javascript:void(0)"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                  <li><a href="Javascript:void(0)"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>

                  <!-- Profil -->
                  <li>
                    <a href="/users/<%= u._id %>">
                      <i class="fa fa-external-link-square" aria-hidden="true"></i>
                    </a>
                  </li>

                  <!-- Mesaj At (kendine gösterme) -->
                  <% if (user && String(user._id) !== String(u._id)) { %>
                    <li>
                      <a href="/messages/<%= u._id %>" title="Mesaj At">
                        <i class="fa fa-comment" aria-hidden="true"></i>
                      </a>
                    </li>
                  <% } %>
                </ul>

                <% if (user && String(user._id) !== String(u._id)) { %>
                  <div style="margin-top:10px;">
                    <a
                      href="/messages/<%= u._id %>"
                      style="display:inline-block; padding:10px 14px; border:1px solid #ff2f7a; color:#ff2f7a; border-radius:6px;"
                    >
                      Mesaj At
                    </a>
                  </div>
                <% } %>

              </div>
            </div>
          </div>
        <% } %>

      </div>
    </div>
  </div>
  <!-- end team -->

  <!-- footer -->
  <%- include("partials/_footer") %>
</body>
</html>
