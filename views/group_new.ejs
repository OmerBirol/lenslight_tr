<%- include("partials/_header") %>
<%- include("partials/_menu", { link: "groups" }) %>

<div class="container" style="margin-top:30px; max-width:900px;">
  <h2>Grup Oluştur</h2>

  <form method="POST" action="/groups" style="margin-top:15px;">
    <label style="display:block; margin-bottom:8px;">Grup Adı</label>
    <input
      name="name"
      required
      maxlength="60"
      style="width:100%; padding:12px; border:1px solid #ddd; border-radius:8px;"
      placeholder="Örn: Fotoğrafçılar"
    />

    <div style="margin-top:10px; opacity:.7;">
      Grubu oluşturduktan sonra grup sayfasından davet gönderebilirsin.
    </div>

    <button type="submit" style="margin-top:14px; padding:10px 16px; border:0; border-radius:8px;">
      Oluştur
    </button>
  </form>
</div>

<%- include("partials/_footer") %>
