<!-- ✅ AVATAR UPLOAD MODAL -->
<div class="modal fade avatar-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div style="margin-top: 50px; margin-bottom: 50px;" class="container">
        <div class="row">
          <div class="col-md-12 ">
            <div class="text_align_center">
              <h2 style="font-size: 30px; margin-bottom: 20px; color: #D43A8E;">
                Change Profile Photo
              </h2>
            </div>
          </div>

          <div class="col-md-10 offset-md-1">
            <form class="main_form" method="POST" action="/users/avatar" enctype="multipart/form-data">
              <div class="row">
                <div style="margin-bottom: 20px ;" class="col-md-12">
                  <input type="file" name="avatar" accept="image/*" class="form-control-file" required>
                </div>

                <div class="col-md-12">
                  <div class="group_form text_align_center">
                    <button class="read_more" type="submit">Upload Avatar</button>
                  </div>
                </div>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- ✅ PHOTO UPLOAD MODAL -->
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div style="margin-top: 50px; margin-bottom: 50px;" class="container">
        <div class="row">
          <div class="col-md-12 ">
            <div class="text_align_center">
              <h2 style="font-size: 30px; margin-bottom: 20px; color: #D43A8E;">
                Add New Photo
              </h2>
            </div>
          </div>
          <div class="col-md-10 offset-md-1">
            <form id="request" class="main_form" method="POST" action="/photos" enctype="multipart/form-data">
              <div class="row">
                <div class="col-md-12">
                  <input class="form_control" placeholder="Name" type="text" name="name">
                </div>
                <div class="col-md-12">
                  <textarea name="description" style="height: 150px;" class="form_control"
                    placeholder="Description" rows="5"></textarea>
                </div>

                <div style="margin-bottom: 20px ;" class="col-md-12">
                  <input type="file" name="image" class="form-control-file" required>
                </div>

                <div class="col-md-12">
                  <div class="group_form text_align_center">
                    <button class="read_more" type="submit">Upload File</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // ✅ Edit Bio tıklanınca textarea + Save Bio aç
  const editBtn = document.getElementById("editBioBtn");
  const editor = document.getElementById("bioEditor");
  const saveBtn = document.getElementById("saveBioBtn");

  if (editBtn && editor && saveBtn) {
    editBtn.addEventListener("click", () => {
      const isOpen = editor.style.display === "block";
      editor.style.display = isOpen ? "none" : "block";
      saveBtn.style.display = isOpen ? "none" : "inline-flex";
      editBtn.textContent = isOpen ? "Edit Bio" : "Close Editor";
    });
  }
</script>

<%- include("partials/_footer") %>
