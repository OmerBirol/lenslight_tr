<%- include("partials/_header") %>

<style>
  .avatar{
    width: 160px;
    height: 160px;
    border-radius: 50%;
    object-fit: cover;
  }

  /* ✅ Bio alanı (kart gibi) */
  .bio-card{
    max-width: 900px;
    margin: 30px auto 0;
    padding: 50px 40px;
    background: #fff;
    box-shadow: 0 10px 30px rgba(0,0,0,.08);
    border-radius: 6px;
    text-align: center;
  }

  .bio-text{
    margin: 0 0 18px;
    font-size: 20px;
    line-height: 1.6;
  }

  /* ✅ Edit + Save buton alanı */
  .bio-actions{
    display: flex;
    justify-content: center;
    gap: 14px;
    margin-top: 10px;
    flex-wrap: wrap;
  }

  /* ✅ Butonlar aynı boy olsun (Save Bio küçük kalmasın) */
  .bio-actions .read_more{
    min-width: 220px;
    height: 58px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    padding: 0 24px;
  }

  /* ✅ Textarea (bio kartının içinde dursun) */
  .bio-editor{
    max-width: 720px;
    margin: 18px auto 0;
    display: none; /* Edit Bio basınca açılacak */
  }

  .bio-editor textarea{
    width: 100%;
    height: 140px;
    resize: vertical;
  }

  /* ✅ Add New Photo -> Edit Bio'nun ALTINDA ve ORTALI */
  .add-photo-wrap{
    text-align: center;
    margin-top: 22px;
    margin-right: 15px;
  }

  .add-photo-wrap .read_more{
    min-width: 260px;
    height: 58px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0 26px;
  }

  /* ✅ Mobil düzen */
  @media (max-width: 768px){
    .avatar{
      width: 120px;
      height: 120px;
    }

    .bio-card{
      margin: 18px 12px 0;
      padding: 28px 18px;
    }

    .bio-text{
      font-size: 18px;
    }

    .bio-actions{
      flex-direction: column;
      align-items: center;
      gap: 12px;
    }

    .bio-actions .read_more{
      width: 100%;
      max-width: 360px;
      min-width: unset;
    }

    .add-photo-wrap{
      margin-top: 18px;
      padding: 0 12px;
    }

    .add-photo-wrap .read_more{
      width: 100%;
      max-width: 360px;
      min-width: unset;
    }

    /* ✅ Olası kesilme sorunlarına karşı */
    .customers, .titlepage, .satteb{
      overflow: visible !important;
      height: auto !important;
      min-height: unset !important;
    }
  }
</style>

<!-- loader -->
<div class="loader_bg">
  <div class="loader">
    <img src="/images/loading.gif" alt="#" />
  </div>
</div>
<!-- end loader -->

<%- include("partials/_menu", { link: "dashboard" }) %>

<div class="customers">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="titlepage text_align_center">

          <!-- ✅ AVATAR -->
          <div class="text_align_center" style="margin-bottom:20px;">
            <img
              src="<%= user.avatar ? user.avatar : '/images/team1.jpg' %>"
              alt="avatar"
              class="avatar"
            />
          </div>

          <!-- ✅ AVATAR CHANGE -->
          <div class="text_align_center" style="margin-bottom: 15px;">
            <button data-toggle="modal" data-target=".avatar-modal" type="button" class="read_more">
              Change Profile Photo
            </button>
          </div>

          <h2>Welcome <%= user.username %></h2>

        </div>
      </div>
    </div>

    <!-- ✅ BIO CARD -->
    <div class="row">
      <div class="col-md-12">
        <div class="bio-card">
          <p class="bio-text">
            <%= user.bio && user.bio.length > 0
                ? user.bio
                : "Henüz kendin hakkında bir şey yazmadın." %>
          </p>

          <!-- ✅ Buttons: Edit + Save -->
          <div class="bio-actions">
            <% if (currentUser && currentUser._id.toString() === user._id.toString()) { %>
          
              <button type="button" class="read_more" id="editBioBtn">
                Edit Bio
              </button>
          
              <form action="/users/bio" method="POST" id="bioForm" style="margin:0;">
                <button type="submit" class="read_more" id="saveBioBtn" style="display:none;">
                  Save Bio
                </button>
              </form>
          
            <% } %>
          </div>
          

          <!-- ✅ BIO EDITOR -->
          <div class="bio-editor" id="bioEditor">
            <textarea
              name="bio"
              form="bioForm"
              class="form_control"
              placeholder="Kendin hakkında bir şeyler yaz..."
            ><%= user.bio ? user.bio : "" %></textarea>
          </div>

          <!-- ✅ Add New Photo -->
          <div class="add-photo-wrap">
            <button
              data-toggle="modal"
              data-target=".bd-example-modal-lg"
              type="button"
              class="read_more"
            >
              Add New Photo
            </button>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>
<!-- end customers -->

<!-- ✅ MY PHOTOS -->
<% if (photos && photos.length > 0) { %>
<div class="gallery">
  <div class="container_with">
    <div class="row">
      <div class="col-md-12">
        <div class="titlepage text_align_center">
          <h2>My Photos</h2>
        </div>
      </div>
    </div>

    <div class="tz-gallery">
      <div class="row">
        <% for(photo of photos){ %>
          <div class="col-lg-4 col-md-6 ma_bottom30">
            <div class="lightbox">
              <img src="<%= photo.url %>" alt="<%= photo.name %>">
              <div class="view_main">
                <div class="pose">
                  <a class="read_more" href="/photos/<%= photo._id %>">
                    <img src="/images/ga.png" alt="#"/>
                  </a>
                  <h3 style="padding-top:10px; padding-bottom:10px">
                    <%= photo.name %>
                  </h3>
                  <p style="padding-top:10px;">
                    <%= photo.description.substring(0, 80) + "..." %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>

  </div>
</div>
<% } %>

<!-- ✅ FOLLOWERS -->
<% if (user.followers && user.followers.length > 0) { %>
<div class="team">
  <div class="container_with">
    <div class="row">
      <div class="col-md-12">
        <div class="titlepage text_align_center">
          <h2>Followers</h2>
        </div>
      </div>

      <% for(follower of user.followers){ %>
      <div class="col-md-4">
        <div class="team_box text_align_center">
          <div class="team_img">
            <figure>
              <img src="<%= follower.avatar ? follower.avatar : '/images/team1.jpg' %>" alt="#"/>
            </figure>
          </div>
          <div class="craig">
            <h3><%= follower.username %></h3>
            <span>PHOTOGRAPHER</span>
            <ul class="social_icon ">
              <li><a href="Javascript:void(0)"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
              <li><a href="Javascript:void(0)"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
              <li><a href="/users/<%= follower._id %>"><i class="fa fa-external-link-square" aria-hidden="true"></i></a></li>
            </ul>
          </div>
        </div>
      </div>
      <% } %>

    </div>
  </div>
</div>
<% } %>

<!-- ✅ FOLLOWINGS -->
