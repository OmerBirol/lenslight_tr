<%- include("partials/_header") %>
<%- include("partials/_menu", { link: "groups" }) %>

<div class="container" style="margin-top:30px; max-width:900px;">
  <h2>Davetler</h2>

  <% if (!invites || invites.length === 0) { %>
    <p>Bekleyen davetin yok.</p>
  <% } else { %>
    <ul style="list-style:none; padding-left:0;">
      <% invites.forEach(i => { %>
        <li style="border:1px solid #eee; padding:12px; border-radius:8px; margin-bottom:10px;">
          <div>
            <strong><%= i.group?.name || "Grup" %></strong>
            <div style="opacity:.7;">Davet eden: <%= i.from?.username || "user" %></div>
          </div>

          <div style="margin-top:10px; display:flex; gap:10px;">
            <form method="POST" action="/invites/<%= i._id %>/accept">
              <button type="submit">Kabul</button>
            </form>

            <form method="POST" action="/invites/<%= i._id %>/decline">
              <button type="submit">Red</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>

<%- include("partials/_footer") %>
