


<header class="header-area">
  
  <style>
    /* ===== Mobil Menü (Hamburger) ===== */
    .site-navbar {
      position: relative;
    }

    /* Hamburger buton */
    .nav-toggler {
      display: none;
      background: transparent;
      border: 0;
      cursor: pointer;
      font-size: 28px;
      line-height: 1;
      padding: 8px 10px;
    }

    /* Menü (desktop) */
    .site-navbar ul {
  display: flex;
  align-items: center;
  justify-content: flex-start; /* ✅ sola yasla */
  gap: 10px;
  margin: 0;
  padding: 0;
  list-style: none;
}

    /* Mobil görünüm */
    @media (max-width: 768px) {
  .header-area .col-md-8.col-sm-9 {
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }

  .nav-toggler {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  /* ✅ ESKİ: position:absolute ... (BUNU KALDIR) */

  /* ✅ YENİ: menü ekranın içine sabitlenir */
  .site-navbar ul {
    display: none;
    position: fixed;     /* ✅ önemli */
    top: 70px;           /* header yüksekliğine göre 60-80 arası ayarla */
    left: 0;             /* ✅ taşmayı bitirir */
    right: 0;            /* ✅ taşmayı bitirir */
    background: #fff;
    flex-direction: column;
    align-items: stretch;
    gap: 0;
    border-top: 1px solid #eee;
    z-index: 99999;
    max-height: calc(100vh - 70px);
    overflow-y: auto;
  }

  .site-navbar ul li a {
    display: block;
    padding: 14px 18px;
    border-bottom: 1px solid #f2f2f2;
  }

  .site-navbar.open ul {
    display: flex;
  }
}

  </style>
  
  <div class="container-fluid">
    <div class="row">

      <div class="col-md-2 col-sm-3">
        <div class="logo">
          <a href="/">lens<br><span>light</span></a>
        </div>
      </div>

      <div class="col-md-8 col-sm-9">
        <div class="navbar-area">
          <nav class="site-navbar" id="siteNavbar">
            <!-- ✅ Hamburger (mobil) -->
            <button class="nav-toggler" type="button" id="navToggler" aria-label="Menu" aria-expanded="false">
              ☰
            </button>

            <ul id="navMenu">
              <li><a class="<%= link === 'index' && 'active' %>" href="/">Home</a></li>
              <li><a class="<%= link === 'about' && 'active' %>" href="/about">About</a></li>

              <li>
                <a class="<%= link === 'photos' ? 'active' : '' %>" href="/photos">Photos</a>
              </li>

              <li><a class="<%= link === 'contact' && 'active' %>" href="/contact">Contact</a></li>
              
              <% if (user) { %>
                <li><a class="<%= link === 'users' && 'active' %>" href="/users">Users</a></li>
                <li><a class="<%= link === 'dashboard' && 'active' %>" href="/users/dashboard">Dashboard</a></li>
                <li><a class="<%= link === 'messages' && 'active' %>" href="/messages">Mesajlar</a></li>
                <li><a class="<%= link === 'groups' && 'active' %>" href="/groups">Gruplar</a></li>
                <li><a href="/invites">Davetler</a></li>
                <li><a href="/logout">Logout</a></li>
              <% } else { %>
                <li><a class="<%= link === 'login' && 'active' %>" href="/login">Login</a></li>
                <li><a class="<%= link === 'register' && 'active' %>" href="/register">Register</a></li>
              <% } %>
            </ul>

          </nav>
        </div>
      </div>

    </div>
  </div>

  <script>
    (function () {
      const nav = document.getElementById("siteNavbar");
      const btn = document.getElementById("navToggler");

      if (!nav || !btn) return;

      btn.addEventListener("click", () => {
        nav.classList.toggle("open");
        const expanded = btn.getAttribute("aria-expanded") === "true";
        btn.setAttribute("aria-expanded", String(!expanded));
      });

      // Mobilde linke tıklayınca menü kapansın
      nav.addEventListener("click", (e) => {
        const isLink = e.target && e.target.tagName === "A";
        if (isLink && nav.classList.contains("open")) {
          nav.classList.remove("open");
          btn.setAttribute("aria-expanded", "false");
        }
      });
    })();
  </script>
</header>
